@import '../shared-styles/border-radius.styl'
@import '../shared-styles/colors.styl'
@import '../shared-styles/typography.styl'

label 
  BodyText()

:host 
  display flex
  align-items center
  cursor pointer
  outline none

ll-button 
  --ll-button-fill var(--ll-checkbox-fill, var(--ll-theme-main, white))
  --ll-button-text-color var(--ll-checkbox-color, var(--ll-theme-highlight, ColorGreen))
  --ll-button-border-radius BorderRadiusM
  --ll-button-border-color var(--ll-checkbox-border-color, var(--ll-theme-dark, ColorBlack))
  display flex
  align-items center
  justify-content center
  padding 0
      
label 
  padding-left 9px
  user-select none
  cursor pointer
  color var(--ll-checkbox-color, var(--ll-theme-dark, ColorBlack))